<Page x:Class="Teacher.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Teacher"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="780"
      Title="MenuPage">

    <Grid Background="White">
        <Button x:Name="btnLearn" Content="Ucz się" HorizontalAlignment="Left" Height="145" Margin="60,60,0,0" VerticalAlignment="Top" Width="180" Click="btnLearn_Click"/>
        <Button x:Name="btnAddLibrary" Content="Dodaj bibliotekę" HorizontalAlignment="Left" Height="145" Margin="300,60,0,0" VerticalAlignment="Top" Width="180" Click="btnAddLibrary_Click"/>
        <Button x:Name="btnAddWord" Content="Dodaj słówko" HorizontalAlignment="Left" Height="145" Margin="540,60,0,0" VerticalAlignment="Top" Width="180" Click="btnAddWord_Click"/>
    </Grid>
</Page>
